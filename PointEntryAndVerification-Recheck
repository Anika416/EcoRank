<body>

    <div class="form-container">
        <h2>Submit Points</h2>

        <div id="points-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username">
            </div>
            <div class="form-group">
                <label for="points">Points:</label>
                <input type="number" id="points" name="points">
            </div>
            <div class="form-group">
                <label for="proof">Proof (Image):</label>
                <input type="file" id="proof" name="proof" accept="image/*">
            </div>
            <button onclick="submitPoints()">Submit Points</button>
            <p id="error" class="error-message"></p>
            <p id="success" class="success-message"></p>
        </div>
    </div>

    <script>
        function submitPoints() {
            const username = document.getElementById('username').value;
            const points = document.getElementById('points').value;
            const proof = document.getElementById('proof').files[0];
            const errorDisplay = document.getElementById('error');
            const successDisplay = document.getElementById('success');

            if (!username || !points || !proof) {
                errorDisplay.textContent = "Please fill in all fields.";
                successDisplay.textContent = "";
                return;
            }

            verifyProof(proof).then(verified => {
                if (verified) {
                    updateUserPoints(username, points);
                    successDisplay.textContent = "Points submitted successfully!";
                    errorDisplay.textContent = "";
                } else {
                    errorDisplay.textContent = "Proof verification failed.";
                    successDisplay.textContent = "";

                }
            }).catch(error => {
                errorDisplay.textContent = "Error during verification: " + error.message;
                successDisplay.textContent = "";
            });
        }

        async function verifyProof(proofFile) {
            if(proofFile){
                return true;
            } else {
                return false;
            }
        }

        function updateUserPoints(username, points) {
            let users = JSON.parse(localStorage.getItem('ecorank_users')) || [];

            let userIndex = users.findIndex(user => user.username === username);

            if (userIndex !== -1) {
                users[userIndex].points = (users[userIndex].points || 0) + parseInt(points);
                localStorage.setItem('ecorank_users', JSON.stringify(users));
                console.log(`Updated ${username}'s points to ${users[userIndex].points}`);
            } else {
                console.log(`User ${username} not found.`);
                errorDisplay.textContent = "User not found";
            }
        }
    </script>
