<body>

    <div class="form-container">
        <h2>Sign Up / Login</h2>

        <div id="signup-form">
            <div class="form-group">
                <label for="signup-username">Username:</label>
                <input type="text" id="signup-username" name="signup-username">
            </div>
            <div class="form-group">
                <label for="signup-password">Password:</label>
                <input type="password" id="signup-password" name="signup-password">
            </div>
            <button onclick="signUpUser()">Sign Up</button>
            <p id="signUpError" class="error-message"></p>
        </div>

        <div id="login-form">
            <div class="form-group">
                <label for="login-username">Username:</label>
                <input type="text" id="login-username" name="login-username">
            </div>
            <div class="form-group">
                <label for="login-password">Password:</label>
                <input type="password" id="login-password" name="login-password">
            </div>
            <button onclick="logInUser()">Login</button>
            <p id="loginError" class="error-message"></p>
        </div>
    </div>

    <script>
        // Store user data (replace with a real database later)
        const userData = {};

        function signUpUser() {
            // Get username and password from the form
            const username = document.getElementById('signup-username').value;
            const password = document.getElementById('signup-password').value;
            const errorDisplay = document.getElementById('signUpError');

            // Check if username already exists
            if (userData[username]) {
                errorDisplay.textContent = "Username already exists.";
            } else {
                // Store the new user's data
                userData[username] = password;
                errorDisplay.textContent = "Sign up successful!";
                // Redirect to the main app page here (replace this comment)
            }
        }

        function logInUser() {
            // Get username and password from the form
            const username = document.getElementById('login-username').value;
            const password = document.getElementById('login-password').value;
            const errorDisplay = document.getElementById('loginError');

            // Check if the user exists and the password is correct
            if (userData[username] && userData[username] === password) {
                errorDisplay.textContent = "Login successful!";
                // Redirect to the main app page here (replace this comment)
            } else {
                errorDisplay.textContent = "Invalid username or password.";
            }
        }
    </script>

